generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String
  description String?
  price       Decimal
  sku         String  @unique
  published   Boolean @default(false)
}

model Coffee {
  id      String   @id @default(cuid())
  name    String   @unique
  brand   String?
  flavors Flavor[]
}

model Flavor {
  id      String   @id @default(cuid())
  name    String   @unique
  coffees Coffee[]
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  nickname  String?
  password  String
  email     String   @unique
  avatar    String?
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

